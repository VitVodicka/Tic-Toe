<Window x:Class="Tic_Toe.OpenPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tic_Toe"
        mc:Ignorable="d"
        Title="OpenPage" Height="940" Width="1280" FontFamily="Play" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.65*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <DataGrid Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <ListBox Grid.Column="0" Margin="5"></ListBox>
        <TextBlock Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Text="My Records" FontSize="40"></TextBlock>



    </Grid>
</Window>
