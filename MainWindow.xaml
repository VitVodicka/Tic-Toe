                                    <!--                                   your color here -->

                                    <TextBlock Text="{TemplateBinding Content}" Width="15" Visibility="Hidden" Foreground="Black" FontFamily="Play" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,-4,0"   Height="15" Name="cross"></TextBlock>
                                </Border>

                            </StackPanel>
                            <ControlTemplate.Triggers >
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="cross" Property="Visibility" Value="Visible"></Setter>

                                </Trigger>
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter TargetName="cross" Property="Visibility" Value="Hidden"></Setter>
                                </Trigger>

                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </CheckBox.Template>
                </CheckBox>
                <CheckBox   Background="#E5E5E5"  Height="Auto"  Width="Auto"     BorderThickness="0.5"   Name="arrayColumn1Row1" Checked="checking"  >
                    <CheckBox.BorderBrush  >
                        <SolidColorBrush Color="Black" ></SolidColorBrush>
                    </CheckBox.BorderBrush>
                    <CheckBox.LayoutTransform >
                        <ScaleTransform ScaleX="17" ScaleY="12"></ScaleTransform>
                    </CheckBox.LayoutTransform>
                    <CheckBox.Template>

                        <ControlTemplate TargetType="{x:Type CheckBox}" >

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" >
                                <Border BorderBrush="{TemplateBinding BorderBrush}"  Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" Width="15" Height="15">
                                    <!--                                   your color here -->

                                    <TextBlock Text="{TemplateBinding Content}" Width="15" Visibility="Hidden" Foreground="Black" FontFamily="Play" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,-4,0"   Height="15" Name="cross"></TextBlock>
                                </Border>

                            </StackPanel>
                            <ControlTemplate.Triggers >

                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="cross" Property="Visibility" Value="Visible"></Setter>

                                </Trigger>
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter TargetName="cross" Property="Visibility" Value="Hidden"></Setter>
                                </Trigger>

                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </CheckBox.Template>
                </CheckBox>
                <CheckBox   Background="#E5E5E5"   BorderThickness="0.5"  Height="Auto" Width="Auto"  Name="arrayColumn1Row2" Checked="checking"  >
                    <CheckBox.BorderBrush  >
                        <SolidColorBrush Color="Black" ></SolidColorBrush>
                    </CheckBox.BorderBrush>
                    <CheckBox.LayoutTransform >
                        <ScaleTransform ScaleX="17" ScaleY="12"></ScaleTransform>
                    </CheckBox.LayoutTransform>
                    <CheckBox.Template>

                        <ControlTemplate TargetType="{x:Type CheckBox}" >

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" >
                                <Border BorderBrush="{TemplateBinding BorderBrush}"  Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" Width="15" Height="15">
                                    <!--                                   your color here -->

                                    <TextBlock Text="{TemplateBinding Content}" Width="15" Visibility="Hidden" Foreground="Black" FontFamily="Play" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,-4,0"   Height="15" Name="cross"></TextBlock>
                                </Border>

                            </StackPanel>
                            <ControlTemplate.Triggers >

                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="cross" Property="Visibility" Value="Visible"></Setter>

                                </Trigger>
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter TargetName="cross" Property="Visibility" Value="Hidden"></Setter>
                                </Trigger>

                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </CheckBox.Template>
                </CheckBox>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <CheckBox    Width="Auto"  Height="Auto"   Background="#E5E5E5" Grid.Column="2"  BorderThickness="0.5" Name="arrayColumn2Row0" Checked="checking" >
                    <CheckBox.BorderBrush  >
                        <SolidColorBrush Color="Black" ></SolidColorBrush>
                    </CheckBox.BorderBrush>
                    <CheckBox.LayoutTransform >
                        <ScaleTransform ScaleX="17" ScaleY="12"></ScaleTransform>
                    </CheckBox.LayoutTransform>
                    <CheckBox.Template>

                        <ControlTemplate TargetType="{x:Type CheckBox}" >

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" >
                                <Border BorderBrush="{TemplateBinding BorderBrush}"  Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" Width="15" Height="15">
                                    <!--                                   your color here -->

                                    <TextBlock Text="{TemplateBinding Content}" Width="15" Visibility="Hidden" Foreground="Black" FontFamily="Play" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,-4,0"   Height="15" Name="cross"></TextBlock>
                                </Border>

                            </StackPanel>
                            <ControlTemplate.Triggers >

                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="cross" Property="Visibility" Value="Visible"></Setter>

                                </Trigger>
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter TargetName="cross" Property="Visibility" Value="Hidden"></Setter>
                                </Trigger>

                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </CheckBox.Template>
                </CheckBox>
                <CheckBox  Background="#E5E5E5"   Width="Auto"    BorderThickness="0.5"  Height="Auto" Name="arrayColumn2Row1" Checked="checking" Grid.ColumnSpan="3">
                    <CheckBox.BorderBrush  >
                        <SolidColorBrush Color="Black" ></SolidColorBrush>
                    </CheckBox.BorderBrush>
                    <CheckBox.LayoutTransform >
                        <ScaleTransform ScaleX="17" ScaleY="12"></ScaleTransform>
                    </CheckBox.LayoutTransform>
                    <CheckBox.Template>

                        <ControlTemplate TargetType="{x:Type CheckBox}" >

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" >
                                <Border BorderBrush="{TemplateBinding BorderBrush}"  Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" Width="15" Height="15">
                                    <!--                                   your color here -->

                                    <TextBlock Text="{TemplateBinding Content}" Width="15" Visibility="Hidden" Foreground="Black" FontFamily="Play" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,-4,0"   Height="15" Name="cross"></TextBlock>
                                </Border>

                            </StackPanel>
                            <ControlTemplate.Triggers >

                                <Trigger Property="IsChecked" Value="True">
