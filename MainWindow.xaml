        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tic_Toe"
        mc:Ignorable="d"
        Title="Tic Toe" Height="840" MinHeight="800" MinWidth="1080" Width="1280" WindowStartupLocation="CenterOwner" WindowState="Maximized" FontFamily="Play">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.7*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.RowSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.ColumnSpan="3">
            <StackPanel Orientation="Vertical">
                <CheckBox   Content="X"   Background="#E5E5E5"   BorderThickness="0.5" Name="arrayColumn0Row0" Checked="checking"  >
                    <CheckBox.BorderBrush  >
                        <SolidColorBrush Color="Black" ></SolidColorBrush>
                    </CheckBox.BorderBrush>
                    <CheckBox.LayoutTransform >
                        <ScaleTransform ScaleX="17" ScaleY="12"></ScaleTransform>
                    </CheckBox.LayoutTransform>
                    <CheckBox.Template>

                        <ControlTemplate TargetType="{x:Type CheckBox}" >

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" >
                                <Border BorderBrush="{TemplateBinding BorderBrush}"  Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" Width="15" Height="15" IsEnabled="{TemplateBinding IsEnabled}">
                                    <!--                                   your color here -->

                                    <TextBlock Text="{TemplateBinding Content}" Width="15" Visibility="Visible" IsEnabled="False"  Foreground="Black" FontFamily="Play" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,-4,0"   Height="15" Name="cross"></TextBlock>
                                </Border>

                            </StackPanel>
                            <ControlTemplate.Triggers >


                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="cross" Property="Visibility" Value="Visible"></Setter>
                                </Trigger>

                                <Trigger Property="IsChecked" Value="False">
                                    <Setter TargetName="cross" Property="Visibility" Value="Hidden"></Setter>
                                </Trigger>


                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </CheckBox.Template>
                </CheckBox>
                <CheckBox  Content="X" VerticalAlignment="Center"  Background="#E5E5E5"  Height="Auto"  Width="Auto"  BorderThickness="0.5"   Name="arrayColumn0Row1" Checked="checking">
                    <CheckBox.BorderBrush  >
                        <SolidColorBrush Color="Black" ></SolidColorBrush>
                    </CheckBox.BorderBrush>
                    <CheckBox.LayoutTransform >
                        <ScaleTransform ScaleX="17" ScaleY="12"></ScaleTransform>
                    </CheckBox.LayoutTransform>
                    <CheckBox.Template>

                        <ControlTemplate TargetType="{x:Type CheckBox}" >

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" >
                                <Border BorderBrush="{TemplateBinding BorderBrush}"  Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" Width="15" Height="15">
                                    <!--                                   your color here -->

                                    <TextBlock Text="{TemplateBinding Content}" Width="15" Visibility="Hidden" Foreground="Black" FontFamily="Play" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,-4,0"   Height="15" Name="cross"></TextBlock>
                                </Border>

                            </StackPanel>
                            <ControlTemplate.Triggers >

                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="cross" Property="Visibility" Value="Visible"></Setter>

                                </Trigger>
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter TargetName="cross" Property="Visibility" Value="Hidden"></Setter>
                                </Trigger>

                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </CheckBox.Template>
                </CheckBox>
                <CheckBox   Background="#E5E5E5"   BorderThickness="0.5"  Height="Auto"  Width="Auto"  Name="arrayColumn0Row2" Checked="checking" >
                    <CheckBox.BorderBrush  >
                        <SolidColorBrush Color="Black" ></SolidColorBrush>
                    </CheckBox.BorderBrush>
                    <CheckBox.LayoutTransform >
                        <ScaleTransform ScaleX="17" ScaleY="12"></ScaleTransform>
