                                    <!--                                   your color here -->

                                    <TextBlock Text="{TemplateBinding Content}" Width="15" Visibility="Hidden" Foreground="Black" FontFamily="Play" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,-4,0"   Height="15" Name="cross"></TextBlock>
                                </Border>

                            </StackPanel>
                            <ControlTemplate.Triggers >

                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="cross" Property="Visibility" Value="Visible"></Setter>

                                </Trigger>
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter TargetName="cross" Property="Visibility" Value="Hidden"></Setter>
                                </Trigger>

                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </CheckBox.Template>
                </CheckBox>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <CheckBox    Background="#E5E5E5"  Height="Auto" Width="Auto"    BorderThickness="0.5" Name="arrayColumn1Row0" Checked="checking" >
