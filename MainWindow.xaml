<Window x:Class="Tic_Toe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tic_Toe"
        mc:Ignorable="d"
        Title="MainWindow" Height="940" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="22*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <CheckBox Grid.RowSpan="2" Grid.Row="1"  Background="#C4C4C4" Margin="0,14,0,0" BorderThickness="0.5">
            <CheckBox.BorderBrush  >
                <SolidColorBrush Color="Black" ></SolidColorBrush>
            </CheckBox.BorderBrush>
            <CheckBox.LayoutTransform >
                <ScaleTransform ScaleX="18" ScaleY="13"></ScaleTransform>
            </CheckBox.LayoutTransform>
        </CheckBox>
        <CheckBox Grid.RowSpan="1" Grid.Row="1"  Background="#C4C4C4" Margin="0,14,0,0" BorderThickness="0.5" VerticalAlignment="Center">
            <CheckBox.BorderBrush  >
                <SolidColorBrush Color="Black" ></SolidColorBrush>
            </CheckBox.BorderBrush>
            <CheckBox.LayoutTransform >
                <ScaleTransform ScaleX="18" ScaleY="13"></ScaleTransform>
            </CheckBox.LayoutTransform>
        </CheckBox>
        <CheckBox Grid.RowSpan="1" Grid.Row="1"  Background="#C4C4C4" Margin="0,14,0,0" BorderThickness="0.5" VerticalAlignment="Bottom">
            <CheckBox.BorderBrush  >
                <SolidColorBrush Color="Black" ></SolidColorBrush>
            </CheckBox.BorderBrush>
            <CheckBox.LayoutTransform >
                <ScaleTransform ScaleX="18" ScaleY="13"></ScaleTransform>
            </CheckBox.LayoutTransform>
        </CheckBox>
        <CheckBox Grid.RowSpan="2" Grid.Row="1"  Background="#C4C4C4" Grid.Column="1" Margin="0,14,0,0" BorderThickness="0.5">
            <CheckBox.BorderBrush  >
                <SolidColorBrush Color="Black" ></SolidColorBrush>
            </CheckBox.BorderBrush>
            <CheckBox.LayoutTransform >
                <ScaleTransform ScaleX="18" ScaleY="13"></ScaleTransform>
            </CheckBox.LayoutTransform>
        </CheckBox>
        <CheckBox Grid.RowSpan="1" Grid.Row="1"  Background="#C4C4C4" Grid.Column="1" Margin="0,14,0,0" BorderThickness="0.5" VerticalAlignment="Center">
            <CheckBox.BorderBrush  >
                <SolidColorBrush Color="Black" ></SolidColorBrush>
            </CheckBox.BorderBrush>
            <CheckBox.LayoutTransform >
                <ScaleTransform ScaleX="18" ScaleY="13"></ScaleTransform>
            </CheckBox.LayoutTransform>
        </CheckBox>
        <CheckBox Grid.RowSpan="1" Grid.Row="1" Grid.Column="1"  Background="#C4C4C4" Margin="0,14,0,0" BorderThickness="0.5" VerticalAlignment="Bottom">
            <CheckBox.BorderBrush  >
                <SolidColorBrush Color="Black" ></SolidColorBrush>
            </CheckBox.BorderBrush>
            <CheckBox.LayoutTransform >
                <ScaleTransform ScaleX="18" ScaleY="13"></ScaleTransform>
            </CheckBox.LayoutTransform>
        </CheckBox>

        <CheckBox Grid.RowSpan="1" Grid.Row="1"  Background="#C4C4C4" Margin="0,14,0,0" BorderThickness="0.5" VerticalAlignment="Bottom">
            <CheckBox.BorderBrush  >
                <SolidColorBrush Color="Black" ></SolidColorBrush>
            </CheckBox.BorderBrush>
            <CheckBox.LayoutTransform >
                <ScaleTransform ScaleX="18" ScaleY="13"></ScaleTransform>
            </CheckBox.LayoutTransform>
        </CheckBox>
        <CheckBox Grid.RowSpan="2" Grid.Row="1"  Background="#C4C4C4" Grid.Column="2" Margin="0,14,0,0" BorderThickness="0.5">
            <CheckBox.BorderBrush  >
                <SolidColorBrush Color="Black" ></SolidColorBrush>
            </CheckBox.BorderBrush>
            <CheckBox.LayoutTransform >
                <ScaleTransform ScaleX="18" ScaleY="13"></ScaleTransform>
            </CheckBox.LayoutTransform>
        </CheckBox>
        <CheckBox Grid.RowSpan="1" Grid.Row="1"  Background="#C4C4C4" Grid.Column="2" Margin="0,14,0,0" BorderThickness="0.5" VerticalAlignment="Center">
            <CheckBox.BorderBrush  >
                <SolidColorBrush Color="Black" ></SolidColorBrush>
            </CheckBox.BorderBrush>
            <CheckBox.LayoutTransform >
                <ScaleTransform ScaleX="18" ScaleY="13"></ScaleTransform>
            </CheckBox.LayoutTransform>
        </CheckBox>
        <CheckBox Grid.RowSpan="1" Grid.Row="1" Grid.Column="2"  Background="#C4C4C4" Margin="0,14,0,0" BorderThickness="0.5" VerticalAlignment="Bottom">
            <CheckBox.BorderBrush  >
                <SolidColorBrush Color="Black" ></SolidColorBrush>
            </CheckBox.BorderBrush>
            <CheckBox.LayoutTransform >
                <ScaleTransform ScaleX="18" ScaleY="13"></ScaleTransform>
            </CheckBox.LayoutTransform>
        </CheckBox>

        <Label FontFamily="Play" Content="X turn" FontSize="50" Grid.Column="1" HorizontalAlignment="Center" Grid.RowSpan="2" Width="146" ></Label>
        <StackPanel Orientation="Vertical" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="104" Width="128" >
            <Label Content="Player(X)" FontSize="30" FontFamily="Play" Margin="0,0,0,25" HorizontalContentAlignment="Center"></Label>
            <TextBlock Text="0" FontSize="30" FontFamily="Play" TextAlignment="Center"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="104" Width="132" >
            <Label Content="Player(O)" FontSize="30" FontFamily="Play" Margin="0,0,0,25" HorizontalContentAlignment="Center"></Label>
            <TextBlock Text="0" FontSize="30" FontFamily="Play" TextAlignment="Center"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="104" Width="50" >
            <Label Content="Tie" FontSize="30" FontFamily="Play" Margin="0,0,0,25" HorizontalContentAlignment="Center"></Label>
            <TextBlock Text="0" FontSize="30" FontFamily="Play" TextAlignment="Center"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Height="104" Width="120" >
            <Label Content="Timer" FontSize="30" FontFamily="Play" Margin="0,0,0,25" HorizontalContentAlignment="Center"></Label>
            <TextBlock Text="00:00:00" FontSize="30" FontFamily="Play" TextAlignment="Center"></TextBlock>
        </StackPanel>
        <Button Width="70" Height="70" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"  Grid.Column="0"/>


    </Grid>
</Window>
