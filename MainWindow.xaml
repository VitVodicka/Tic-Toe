    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.7*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.1*"/>
        </Grid.ColumnDefinitions>

        <CheckBox  HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom"  Background="#E5E5E5"   BorderThickness="0.5" Name="arrayColumn0Row0" Checked="checking"  >
            <CheckBox.BorderBrush  >
                <SolidColorBrush Color="Black" ></SolidColorBrush>
            </CheckBox.BorderBrush>
            <CheckBox.LayoutTransform >
                <ScaleTransform ScaleX="16" ScaleY="11"></ScaleTransform>
            </CheckBox.LayoutTransform>
            <CheckBox.Template>

                <ControlTemplate TargetType="{x:Type CheckBox}" >

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" >
                        <Border BorderBrush="{TemplateBinding BorderBrush}"  Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" Width="15" Height="15">
                            <!--                                   your color here -->

                            <TextBlock Text="{TemplateBinding Content}" Width="15" Visibility="Hidden" Foreground="Black" FontFamily="Play" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,-4,0"   Height="15" Name="cross"></TextBlock>
                        </Border>

                    </StackPanel>
                    <ControlTemplate.Triggers >
                        <DataTrigger Binding="{Binding ElementName=turn, Path=Text}" Value="X turn"  >
                            <Setter TargetName="cross" Property="Text" Value="X"></Setter>

                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=turn, Path=Text}" Value="Y turn"  >
                            <Setter TargetName="cross" Property="Text" Value="O"></Setter>
                            <Setter TargetName="cross" Property="Visibility" Value="Visible"></Setter>
                        </DataTrigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="cross" Property="Visibility" Value="Visible"></Setter>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="cross" Property="Visibility" Value="Hidden"></Setter>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </CheckBox.Template>
        </CheckBox>
